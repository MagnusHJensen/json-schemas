{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/magnushjensen/json-schemas/swem/schemas/tack/tackTypeData.schema.json",
  "title": "SWEM Tack Type Data",
  "description": "Base schema for tack type data properties",
  "type": "object",
  "properties": {
    "can_wear_armor": {
      "type": "boolean",
      "description": "Whether wearing this tack allows equipping armor",
      "default": false
    },
    "ignores": {
      "type": "array",
      "description": "Tack types that this tack ignores for dependency checking",
      "items": {
        "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/tackType"
      },
      "uniqueItems": true,
      "default": []
    },
    "color": {
      "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/color",
      "description": "Color to apply to the tack model",
      "default": [
        255,
        255,
        255
      ]
    }
  },
  "additionalProperties": false
}