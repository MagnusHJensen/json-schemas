{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/magnushjensen/json-schemas/swem/schemas/tack/tack.schema.json",
  "title": "SWEM Tack Item",
  "description": "Schema for SWEM tack item definitions",
  "type": "object",
  "required": [
    "display",
    "cost",
    "meta"
  ],
  "properties": {
    "display": {
      "type": "object",
      "description": "Display properties for the tack item",
      "required": [
        "name",
        "credits"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name of the tack item"
        },
        "credits": {
          "type": "string",
          "description": "Credits displayed on tooltip"
        },
        "inspiration": {
          "type": "string",
          "description": "Inspiration displayed on tooltip"
        }
      },
      "additionalProperties": false
    },
    "cost": {
      "type": "object",
      "description": "Cost properties for purchasing the tack item",
      "required": [
        "coin",
        "amount"
      ],
      "properties": {
        "coin": {
          "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/coinType"
        },
        "amount": {
          "type": "integer",
          "description": "Amount of coin required to purchase",
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "description": "Metadata and technical properties",
      "required": [
        "name",
        "icon",
        "type",
        "data",
        "textures"
      ],
      "properties": {
        "name": {
          "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/internalName"
        },
        "icon": {
          "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/texturePath"
        },
        "type": {
          "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/tackType"
        },
        "data": {
          "type": "object",
          "description": "Type-specific data for the tack item"
        },
        "textures": {
          "type": "object",
          "description": "Texture definitions",
          "required": [
            "horse"
          ],
          "properties": {
            "horse": {
              "type": "object",
              "description": "Horse model textures",
              "required": [
                "legacy"
              ],
              "properties": {
                "legacy": {
                  "type": "object",
                  "description": "Legacy model bone textures",
                  "patternProperties": {
                    "^(bridle|wings|armor|saddle_bag|halter|blanket|girth_strap|leg_wraps|breast_collar|saddle|pasture_blanket)$": {
                      "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/texturePath"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "rack": {
              "type": "object",
              "description": "Rack storage textures",
              "patternProperties": {
                "^(saddle|blanket_5|bridle|halter_lead|lead|pasture_blanket_long_5|pasture_blanket_short_3|horse_armor)$": {
                  "$ref": "https://github.com/magnushjensen/json-schemas/swem/schemas/definitions.schema.json#/$defs/texturePath"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}